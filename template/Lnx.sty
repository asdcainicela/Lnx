\fancyfoot[L]{\LnxLogo} % Left footer with logo
\renewcommand{\footrulewidth}{0.5mm} % Footer line thickness
\renewcommand{\headrulewidth}{0pt} % Remove header line
\fancypagestyle{plain}{\renewcommand{\headrulewidth}{0pt}} % Plain style without header line

% ----------------- Configuraci\'on del Logo -----------------
% Commands to manage the logo
\newcommand{\LnxLogoPath}{} % Variable to store the logo path

\newcommand{\SetLnxLogo}[1]{\renewcommand{\LnxLogoPath}{#1}} % Command to set the logo path

\newcommand{\LnxLogo}{%
	\ifthenelse{\equal{\LnxLogoPath}{}}%
	{{\huge Ln-x} } % If no path is set, display "Ln-x"
	{\includegraphics[width=0.12\textwidth]{\LnxLogoPath}} % If a path is set, display the logo
}

\newcommand{\LnxSize}[1]{%
	\ifthenelse{\equal{\LnxLogoPath}{}}%
	{{\huge Ln-x} } % If no path is set, display "Ln-x"
	{\includegraphics[width=#1\textwidth]{\LnxLogoPath}} % Display the logo scaled to the specified size
}

